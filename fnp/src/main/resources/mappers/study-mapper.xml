<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC
"-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="studyMapper">
	
	<select id="categoryS" resultType="string">
		<![CDATA[
			select category
			from (select category, count(category)
        		  from study
        		  group by category)
			where rownum <= 3
		]]>
	</select>
	
	<select id="newStudy" resultType="Study">
		<![CDATA[
			select *
			from (
			    select *
			    from study
			    order by start_date desc
			)
			where rownum <=3
		]]>
	</select>
	
	<select id="selectStudyList" resultType="Study">
		<![CDATA[
			select * from study
		]]>
	</select>
	
	<select id="listCount" resultType="_int">
	<![CDATA[
		select count(*) from study
	]]>
	</select>
	
	<select id="selectOneStudy" resultType="Study">
		<!-- 유진 -->
		<![CDATA[
			select * from study
			where study_no = #{study_no}
		]]>
	</select>
	
	<select id="selectOneStudyGoalList" resultType="StudyGoal">
		<!-- 유진 -->
		<![CDATA[
			select * from studygoal
			where study_no = #{study_no}
		]]>
	</select>
</mapper>